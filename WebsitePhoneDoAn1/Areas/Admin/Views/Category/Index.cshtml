
@{
    ViewData["Title"] = "Index";
}
@model List<CategoryModel>
<h2>Count: @Model.Count</h2>
<p><a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add</a></p>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Category name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td><a class="btn btn-outline-info" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a></td>
                <td><a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>